<section class="section-acces">
  <div class="row">
    <div class=" col-sm-12 col-md-6 d-flex flex-column justify-content-center info-window wrapper">
      <div class="window-title text-center my-5">
        <h2><%= t('s4.info.title') %></h2>
      </div>
      <div class="info-acces mt-3">
        <div class="address d-flex flex-row justify-content-center">
          <i class="fas fa-map-marker-alt"></i>
          <p>Route de Chancy 76, 1213 Onex</p>
        </div>

        <div class="access d-flex flex-row justify-content-center mt-2">
          <i class="fas fa-bus"></i>
          <p>
            Arrêt: Bandol <br>
            Tram: <span>14</span>
            Bus: <span>J</span> - <span>K</span> - <span>L</span> - <span>NJ</span>
          </p>
        </div>
      </div>
      <div class="info-opening mt-4">
        <div class="lunch text-center">
          <p><%= t('s4.info.week1') %> <strong class="timer">12H - 14H</strong></p>
        </div>
        <div class="dinner text-center">
          <p><%= t('s4.info.week2') %> <strong class="timer">19H - 23H</strong></p>
        </div>
      </div>
    </div>
    <div class=" col-sm-12 col-md-6 d-flex justify-content-center map" >
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2762.429257521167!2d6.097866650945921!3d46.182015993177515!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xd0805a3879d47302!2sLa+Table+des+Artisans+-+Restaurant+Tha%C3%AF!5e0!3m2!1sfr!2sfr!4v1554471937689!5m2!1sfr!2sfr" width="100%" height="100%" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
  </div>
</section>
