<section class="section-home-page">
  <div class="resto-wrapper">
    <div class="resto d-flex flex-row">
      <%= image_tag('logo-50-gold.webp') %>
      <h1>Thaï Artisans</h1>
    </div>
    <p class="home-text text-center">RESTAURANT</p>
  </div>
  <div class="resto-info d-flex flex-column">
    <div class="resto-info-details d-flex flex-row">
      <i class="fas fa-map-marker-alt"></i><p>Route de Chancy 76, 1213 Onex</p>
    </div>
    <br>
    <div class="resto-info-details d-flex flex-row">
      <i class="fas fa-phone"></i><p>022.792.19.00</p>
    </div>
  </div>
  <div class="resto-link text-center">
    <%= link_to t('s1.btn'), new_reservation_path, class: "btn btn-gold" %>
  </div>
</section>


